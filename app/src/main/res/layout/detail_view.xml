<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/cardView3"
        android:layout_height="0dp"
        app:cardElevation="@dimen/cardview_default_radius"
        app:layout_constraintBottom_toTopOf="@+id/commentEditText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1">

        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:id="@+id/backgroundImageView"-->
            <!--android:scaleType="center" />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/detailTitle"
                android:fontFamily="cursive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:transitionName="bring_picture"
                android:textColor="@color/AccentLight"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:backgroundTintMode="screen" />

            <ImageView
                android:id="@+id/detialView"
                android:transitionName="imageTransition"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="8dp" />

            <ImageButton
                android:id="@+id/likeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/detialView"
                android:layout_alignRight="@+id/detialView"
                app:srcCompat="@android:drawable/checkbox_on_background" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/sendFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        app:backgroundTint="@color/cardview_light_background"
        android:tint="@color/AccentLight"
        app:pressedTranslationZ="12dp"
        app:srcCompat="@android:drawable/ic_menu_send"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/commentEditText"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/commentEditText"
        app:layout_constraintTop_toBottomOf="@+id/commentEditText"
        app:elevation="10dp" />


    <EditText
        android:ems="10"
        android:id="@+id/commentEditText"
        android:elevation="@dimen/cardview_default_radius"
        android:hint="    Write a comment..."
        android:textColorHint="#FFFFFF"
        android:background="@color/MainColor"
        android:layout_width="0dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="false"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="311dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="311dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.44"
        android:layout_height="0dp"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
        android:inputType="textCapSentences" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:id="@+id/commentRecyclerView"
        android:background="@color/AccentLighter"
        android:layout_height="0dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/commentEditText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintRight_toRightOf="@+id/commentEditText"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/commentEditText"/>


</android.support.constraint.ConstraintLayout>