<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewPost"
    app:cardElevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textViewPostTitle"
            android:layout_margin="2dp"
            android:layout_alignBottom="@+id/imageViewPost"
            android:layout_alignStart="@+id/imageViewPost"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:textColor="@color/AccentLighter"
            android:textAllCaps="false"
            android:textSize="25sp" />

        <TextView
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPostUserName"
            android:layout_alignBottom="@+id/imageViewPost"
            android:layout_alignEnd="@+id/imageViewPost"
            android:fontFamily="cursive"
            android:textColor="@color/AccentLighter"
            android:textSize="10dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
