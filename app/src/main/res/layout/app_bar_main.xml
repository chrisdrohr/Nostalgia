        <!--android:layout_height="70dp" />-->

    <android.support.design.widget.FloatingActionButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:clickable="true"
        app:fabSize="normal"
        android:id="@+id/fabPhoto"
        app:layout_constraintBottom_toTopOf="@+id/fab"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:tint="@color/AccentLighter"
        android:adjustViewBounds="true"
        app:elevation="6dp"
        app:backgroundTint="@color/fabColor"
        app:srcCompat="@drawable/image_vector"
        android:focusable="false" />

    <android.support.design.widget.FloatingActionButton
        android:clickable="true"
        app:srcCompat="@drawable/filmstrip_vector"
        android:id="@+id/fabVideo"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/floatingActionButton1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton1"
        app:layout_constraintTop_toBottomOf="@+id/floatingActionButton1"
        app:backgroundTint="@color/fabColor"
        android:tint="@color/AccentLighter"
        android:adjustViewBounds="true"
        app:elevation="6dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />


</android.support.constraint.ConstraintLayout>
