<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AccentLighter"
    android:clipChildren="false"
    android:clipToPadding="false"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cardViewDetail"
        android:layout_height="match_parent"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/AccentLighter">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/detialView"
                android:transitionName="imageTransition"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleTextView"
                android:fontFamily="cursive"
                android:layout_centerHorizontal="true"
                android:textColor="@color/cardview_dark_background"
                android:textAlignment="center"
                android:textSize="20sp"
                style="bold"
                android:layout_below="@+id/detialView"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/commentCardViewDetail"
        android:layout_height="350dp"
        android:layout_alignParentTop="true"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/AccentLighter">

        <RelativeLayout
            android:background="@color/AccentLighter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<TextView-->
                <!--android:id="@+id/commentDetailTitle"-->
                <!--android:fontFamily="cursive"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:elevation="10dp"-->
                <!--android:paddingStart="10dp"-->
                <!--android:paddingEnd="10dp"-->
                <!--android:transitionName="bring_picture"-->
                <!--android:textColor="@color/AccentLight"-->
                <!--android:textAllCaps="false"-->
                <!--android:textSize="18sp"-->
                <!--android:textStyle="bold"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_alignParentStart="true"-->
                <!--android:backgroundTintMode="screen" />-->

            <ImageView
                android:id="@+id/commentDetialView"
                android:transitionName="imageTransition"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="8dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/likeButton"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/heart_outline"
                android:background="@android:color/transparent" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/commentRecyclerView"
        android:background="@color/AccentLighter"
        android:layout_below="@+id/commentCardViewDetail"
        android:layout_height="match_parent" />

    <android.support.design.widget.FloatingActionButton
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="25dp"
        android:clickable="true"
        app:srcCompat="@android:drawable/stat_notify_chat"
        android:id="@+id/fabComment"
        app:backgroundTint="@color/DarkColor"
        android:tint="@color/AccentLighter"
        android:alpha=".8"
        android:adjustViewBounds="true"
        app:elevation="5dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />


</RelativeLayout>