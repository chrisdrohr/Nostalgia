<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:attv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutCommentItems"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/commentImageView"
        android:layout_marginStart="10dp"
        app:border_overlay="true"
        app:border_color="@color/DarkColor"
        app:border_width="2dp"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_account_circle_black_36dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/attach"
        android:paddingTop="30dp"
        android:backgroundTint="@color/AccentLight"
        android:src="@drawable/comment_attach"
        android:layout_marginStart="50dp"
        tools:alpha=".5" />

    <android.support.v7.widget.CardView
        android:id="@+id/commentCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/commentImageView"
        app:cardBackgroundColor="@color/DarkColor"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/commentTextView"
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_light_background"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_marginStart="60dp"
        android:elevation="10dp"
        android:visibility="gone"
        android:id="@+id/layout_deleteComment"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardView_deleteComment"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@android:drawable/screen_background_dark_transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Delete this comment?"
                android:id="@+id/textViewDelete"
                android:textSize="18sp"
                android:elevation="6dp"
                android:padding="2dp"
                android:textColor="@color/AccentLighter"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            app:srcCompat="@drawable/delete_vector"
            android:id="@+id/fabDelete"
            android:tint="@color/AccentLighter"
            android:elevation="6dp"
            android:layout_margin="5dp"
            app:backgroundTint="@color/fabColor"
            android:layout_below="@+id/cardView_deleteComment"
            android:layout_alignRight="@+id/cardView_deleteComment" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@drawable/close_circle"
            android:id="@+id/fabCancel"
            android:layout_toLeftOf="@+id/fabDelete"
            android:layout_margin="5dp"
            android:layout_below="@+id/cardView_deleteComment"
            android:tint="@color/AccentLighter"
            android:elevation="6dp"
            app:backgroundTint="@color/fabColor" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:id="@+id/commentDetailCardView"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/commentImageView"
        attv:cardBackgroundColor="@color/AccentLighter"
        attv:cardCornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <com.dragankrstic.autotypetextview.AutoTypeTextView
        android:padding="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/commentUserAutoText"
        android:textSize="15sp"

        />

    <com.dragankrstic.autotypetextview.AutoTypeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:id="@+id/dateAutoText"
        android:paddingTop="1dp"
        android:fontFamily="monospace"
        android:elevation="5dp"
        android:textSize="10sp"
        android:layout_below="@+id/commentUserAutoText"/>

</RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>