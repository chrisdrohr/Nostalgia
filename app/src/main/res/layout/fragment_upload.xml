<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/uploadFragment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.gabekeyner.nostalgia.DialogFragments.UploadFragment">

    <ImageView
        android:id="@+id/uploadImage"
        android:background="@drawable/splash"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <!--<ImageButton-->
        <!--android:id="@+id/addImage"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:src="@drawable/ic_menu_camera"-->
        <!--android:background="@color/tw__transparent"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleLarge"
        android:layout_centerInParent="true"
        android:id="@+id/progress_bar"
        android:backgroundTint="@color/MainColor" />

    <EditText
        android:ems="10"
        android:id="@+id/uploadEditText"
        android:elevation="@dimen/cardview_default_radius"
        android:hint="    Title your photo"
        android:textColorHint="@color/tw__solid_white"
        android:background="@color/DarkColor"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
        android:inputType="textCapSentences"
        android:layout_alignBottom="@+id/uploadImage"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
