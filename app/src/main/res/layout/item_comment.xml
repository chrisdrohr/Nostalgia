<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:attv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/AccentLighter"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/commentImageView"
            android:layout_marginStart="10dp"
            app:border_overlay="true"
            app:border_color="@color/MainColor"
            app:border_width="2dp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_account_circle_black_36dp"/>

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/attach"
      android:paddingTop="30dp"
      android:backgroundTint="@color/AccentLight"
      android:src="@drawable/comment_attach"
      android:layout_alignStart="@+id/userAutoText"
      android:layout_marginStart="50dp"
      tools:alpha=".5" />

    <android.support.v7.widget.CardView
        android:id="@+id/commentCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/commentImageView"
        app:cardBackgroundColor="@color/DarkColor"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/commentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_light_background"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

                <com.dragankrstic.autotypetextview.AutoTypeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/userAutoText"
                    android:textSize="10sp"
                    android:paddingLeft="70dp"
                    android:layout_below="@id/commentCardView"/>

                <com.dragankrstic.autotypetextview.AutoTypeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dateAutoText"
                    android:paddingTop="1dp"
                    android:fontFamily="monospace"
                    android:elevation="5dp"
                    android:textSize="8sp"
                    android:paddingLeft="10dp"
                    android:layout_below="@id/commentCardView"
                    android:layout_toEndOf="@+id/userAutoText"/>

</RelativeLayout>