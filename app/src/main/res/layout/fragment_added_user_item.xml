<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/layoutAddedUser"
    app:cardElevation="2dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent"
    app:cardBackgroundColor="@android:color/transparent"
    android:backgroundTint="@android:color/transparent"
    android:backgroundTintMode="src_over">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageViewAddedUser"
        android:elevation="6dp"
        android:layout_margin="2dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <com.dragankrstic.autotypetextview.AutoTypeTextView
        android:id="@+id/autoTextViewAddedUser"
        android:layout_below="@+id/circleImageViewAddedUser"
        android:layout_centerHorizontal="true"
        android:elevation="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="13sp"
        style="bold" />

        </RelativeLayout>

    </FrameLayout>
