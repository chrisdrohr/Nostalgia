<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/cardViewDetail"
        android:layout_height="match_parent"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/AccentLighter">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/detialView"
                android:transitionName="imageTransition"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="8dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/commentCardViewDetail"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/AccentLighter">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/commentDetailTitle"
                android:fontFamily="cursive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:transitionName="bring_picture"
                android:textColor="@color/AccentLight"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:backgroundTintMode="screen" />

            <ImageView
                android:id="@+id/commentDetialView"
                android:transitionName="imageTransition"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="8dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/commentRecyclerView"
        android:background="@color/AccentLighter"
        android:layout_below="@+id/commentCardViewDetail"
        android:layout_height="match_parent" />

    <android.support.design.widget.FloatingActionButton
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:layout_margin="25dp"
        android:clickable="true"
        app:srcCompat="@android:drawable/stat_notify_chat"
        android:id="@+id/fabComment"
        app:backgroundTint="@color/MainColor"
        android:tint="@color/AccentLighter"
        android:adjustViewBounds="true"
        app:elevation="12dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />


</RelativeLayout>