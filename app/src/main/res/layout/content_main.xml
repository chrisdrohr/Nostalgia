<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/AccentLighter"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gabekeyner.nostalgia.Activities.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha=".2"
        android:background="@color/AccentLighter">

        <ImageView
            android:id="@+id/mainBg"
            android:elevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <fragment
        android:name="com.example.gabekeyner.nostalgia.RecyclerFragments.MainItemFragment"
        android:id="@+id/mainItemFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

