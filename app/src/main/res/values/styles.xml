<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!--<item name="android:windowContentTransitions">true</item>-->
        <item name="colorPrimary">@color/DarkColor</item>
        <item name="colorPrimaryDark">@color/DarkColor</item>
        <item name="colorAccent">@color/AccentLight</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:navigationBarColor">@color/DarkColor</item>
        <item name="android:statusBarColor">@color/DarkColor700</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:textColorPrimary">@color/AccentLight</item>
    </style>

    <!--<style name="AppTheme.NoActionBar">-->
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
    <!--</style>-->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Nostalgia" parent="AppTheme" />

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>

    </style>

    <style name="transparent" parent="android:Theme.Holo.Light.NoActionBar.TranslucentDecor" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="MaterialNostalgia" parent="AppTheme" />

</resources>
