<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    tools:mContext="com.example.rohrlabs.nostalgia.DialogFragments.CommentsFragment"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/comment_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp" />


    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@android:drawable/screen_background_dark_transparent"
        android:elevation="2dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/cardViewprofile">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dialogUserImageView"
                app:border_width="2dp"
                app:border_color="@color/DarkColor"
                android:layout_centerInParent="true"
                app:border_overlay="true"
                android:layout_width="80dp"
                android:layout_height="80dp"
                />
            <TextView
                android:id="@+id/dialogTextView"
                android:textColor="@color/tw__solid_white"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialogUserImageView"
                android:textAlignment="center"
                android:layout_width="match_parent"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

