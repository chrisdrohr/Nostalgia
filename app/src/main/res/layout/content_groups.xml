<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_groups"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AccentLighter"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gabekeyner.nostalgia.GroupsActivity"
    tools:showIn="@layout/activity_groups">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewGroups"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" />

    <com.dragankrstic.autotypetextview.AutoTypeTextView
        android:id="@+id/autoTypeTextViewGroupName"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/recyclerViewAddedFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:fontFamily="cursive"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewAddedFriends"
        android:elevation="4dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




</RelativeLayout>
