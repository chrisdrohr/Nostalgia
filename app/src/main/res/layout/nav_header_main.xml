<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:drawable/screen_background_dark_transparent">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_centerHorizontal="true"
        app:border_color="@color/AccentLighter"
        app:border_overlay="true"
        app:border_width="1dp"
        android:id="@+id/drawerImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <TextView
        android:id="@+id/drawerNameTextView"
        android:textColor="@color/AccentLighter"
        android:layout_below="@+id/drawerImageView"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/drawerGroupTextView"
        android:layout_centerInParent="true"
        android:layout_below="@+id/drawerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
